---
export interface Heading {
  depth: number
  text: string
  slug: string
  subheadings?: Heading[]
}

export interface Props {
  heading: Heading
}

const { heading } = Astro.props
---

<li class="list-inside list-disc px-6 py-2 text-base">
  <a href={"#" + heading.slug}>
    {heading.text}
  </a>
  {
    (heading?.subheadings?.length ?? 0) > 0 && (
      <ul class="translate-x-4">
        {heading?.subheadings?.map((subheading: Heading) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
