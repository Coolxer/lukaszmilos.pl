---
import { Icon } from "astro-icon/components"

export interface Props {
  items: string[]
  interactive?: boolean
  iconName?: string
  color?: string
  size?: string
  class?: string
}

const {
  items,
  interactive = false,
  iconName = "chevron-right",
  color = "text-accent",
  size = "text-4xl",
  class: className,
  ...attributes
} = Astro.props
---

<ul class:list={["flex flex-col gap-1", className]} {...attributes}>
  {
    items.map((item) => (
      <li
        class:list={[
          "flex flex-row items-center gap-2",
          interactive && "duration-300 ease-in-out hover:translate-x-4",
        ]}>
        <Icon name={iconName} class:list={["text-left", color, size]} />
        <span class="flex-1">{item}</span>
      </li>
    ))
  }
</ul>
