---
export interface Props {
  maxColumns?: 1 | 2 | 3 | 4
  placement?: string
  gap?: string
  class?: string
}

const {
  maxColumns = 2,
  placement = "items-center justify-center",
  gap = "gap-8",
  class: className,
  ...attributes
} = Astro.props
---

<div
  class:list={[
    "grid w-full",
    placement,
    gap,
    maxColumns === 1
      ? "grid-cols-1"
      : maxColumns === 2
        ? "grid-cols-1 md:grid-cols-2 xl:gap-16"
        : maxColumns === 3
          ? "grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
          : "grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4",
    className,
  ]}
  {...attributes}>
  <slot />
</div>
