---
import { buildSlug } from "@utils/utils"

import PageLayout from "@layouts/PageLayout.astro"
import { type Meta, type Schema } from "@components/core/MySEO.astro"

import Section from "@components/core/Section.astro"
import Button from "@components/ui/Button.astro"

import CTA from "@components/widgets/CTA.astro"

import { Content as AllServices } from "@components/parts/AllServices.md"

const meta: Meta = {
  title: "Więcej umiejętności - Elementy współpracy",
  description:
    "Zobacz z czym jeszcze możemy współpracować. W skrócie - jest to niemal wszystko związane z cyfryzacją.",
  og: false,
  tw: false,
}

const schema: Schema = {}
---

<PageLayout
  pageTitle="Więcej umiejętności i pól do współpracy"
  pageDescription="Zobacz, z czym jeszcze  możemy współpracować. Jestem otwarty na wiele technicznych spraw, które mogą pomóc Twojej firmie."
  meta={meta}
  schema={schema}>
  <Section center>
    <article
      class="prose marker:text-black prose-h1:text-h1 prose-h2:text-h3 prose-h3:text-h4 prose-h4:text-h5 prose-h5:text-h5 prose-h6:text-h6">
      <AllServices />
    </article>
  </Section>

  <!-- CTA -->
  <CTA>
    <p class="text-center text-h2">Zainteresowany(a) współpracą?</p>

    <Button variant="tetriary" link={buildSlug("kontakt")}
      >Skontaktuj się
    </Button>
  </CTA>
</PageLayout>
