import { buildSlug } from "@utils/utils"

import PageLayout from "@layouts/PageLayout.astro"
import { type Meta, type Schema } from "@components/core/MySEO.astro"

import Section from "@components/core/Section.astro"
import Row from "@components/core/Row.astro"
import MyImage from "@components/ui/MyImage.astro"
import Button from "@components/ui/Button.astro"

import CTA from "@components/widgets/CTA.astro"
import FAQ from "~/components/parts/FAQ.astro"

const meta: Meta = {
  title: "Poprawa strony WWW - Ładniej, szybciej, lepiej",
  description:
    "Zleć poprawę swojej strony lub sklepu w wybranym aspekcie lub w całości. Responsywność, szybkość, użyteczność, a może SEO? Zajmę się wszystkim.",
  og: false,
  tw: false,
}

const schema: Schema = {}
---

