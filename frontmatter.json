{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "src/assets/images/posts/",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "previewPath": "blog",
      "trailingSlash": true
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "pageBundle": false,
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}"
        },
        {
          "title": "meta",
          "name": "meta",
          "type": "fields",
          "fields": [
            {
              "title": "title",
              "name": "title",
              "type": "string"
            },
            {
              "title": "description",
              "name": "description",
              "type": "string"
            }
          ]
        },
        {
          "title": "heading",
          "name": "heading",
          "type": "string"
        },
        {
          "title": "subheading",
          "name": "subheading",
          "type": "string"
        },
        {
          "title": "leading",
          "name": "leading",
          "type": "string"
        },
        {
          "title": "image",
          "name": "image",
          "type": "fields",
          "fields": [
            {
              "title": "src",
              "name": "src",
              "type": "image",
              "isPreviewImage": true
            },
            {
              "title": "alt",
              "name": "alt",
              "type": "string"
            }
          ]
        },
        {
          "title": "video",
          "name": "video",
          "type": "string"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "relatedPosts",
          "name": "relatedPosts",
          "type": "contentRelationship",
          "contentTypeName": "blog",
          "contentTypeValue": "slug",
          "multiple": true
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "knowledgeBase",
          "name": "knowledgeBase",
          "type": "boolean"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        }
      ]
    }
  ]
}
